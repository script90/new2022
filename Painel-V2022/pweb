    /bin/ppweb/ubuinst.sh
elif [[ "$resposta" = '2' ]]; then
/bin/ppweb/install.sh
    else
 echo ""
    echo -e "\033[1;31mOpรงรฃo invรกlida !\033[0m"
    sleep 1
